<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/relativeLayoutProduk"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="20dp"
        android:elevation="3dp"
        app:cardUseCompatPadding="true"
        >
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_gravity="bottom"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_gravity="top"
                android:id="@+id/imageProduk"
                android:src="@drawable/logo"
                android:layout_width="160dp"
                android:layout_height="160dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <androidx.appcompat.widget.LinearLayoutCompat
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/namaProduk"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="Durian Musang King"
                        android:textSize="12sp"
                        android:textColor="#1B1C1E"
                        android:fontFamily="@font/dm_sans_bold"
                        />
                    <TextView
                        android:id="@+id/hargaProduk"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#FF324B"
                        android:textSize="10sp"
                        android:fontFamily="@font/dm_sans_bold"
                        android:text="Rp20000"/>
                </androidx.appcompat.widget.LinearLayoutCompat>
                <androidx.appcompat.widget.AppCompatButton
                    android:layout_marginLeft="10dp"
                    android:id="@+id/buttonAddKeranjang"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/plus"
                    android:backgroundTint="#5BAC45"
                    />
            </LinearLayout>
        </androidx.appcompat.widget.LinearLayoutCompat>


    </androidx.cardview.widget.CardView>


</RelativeLayout>